<!DOCTYPE html>
<html>
<head>
  <title>Host</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'ng/module', media: 'all' %>
  <%= yield :stylesheets %>

  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'ng/module' %>
  <%= yield :javascripts %>

  <%= csrf_meta_tags %>
  <% if @base_href %>
    <base href="<%= @base_href %>">
  <% end %>
  <%= yield :head %>
</head>
<body ng-app="<%= @ng_app %>">

<%= yield %>

</body>
</html>
